<%- include header.ejs %>

<body>

<div class="container">

  <div class="container" >
    <div class="container border border-dark rounded py-5 " style="background-color: #bebebe;">
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
          <center><h1 class="pb-3""><img src="/images/sherlock_pic.png" style="width: 40px; height: 40px">Sherlock</h1> </center>
          <form action="/magnifying_glass" method="POST">
            <div class="form-group">
              <input name="intraLogin" class="form-control" placeholder="Enter Cadet Intra Login">
                <!-- <small id="emailHelp" class="form-text text-muted">Sup' Jaimestown :)</small> -->
            </div>
              <center><button id="btn" type="submit" class="btn btn-dark justify-content-end">Deduce</button></center>
          </form>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>

    <div id="speech" class="container d-flex justify-content-center ">
 
      <div class="row text-center">
       <div class="col">          
         <h2 id="cadet_name" class="pb-4"> 
           <% if (cadet) { %> 
                <strong><%= cadet %></strong>
              <br>
              Hmmm I would say...
            <% } %> </h2>
         <% if (answer.trim() == 'Inner Ring of curriculumn -- Not quite ready...') { %>
            <div>
                <img src="/images/redBubble.png" class="bubble"><h3 class="answer"><%= answer %> </h3>
            </div>
         <% } else if (answer.trim() == 'Outer Ring of curriculum - They are ready!') { %>
          <div>
              <img src="/images/greenBubble.png" class="bubble"><h3 class="answer"><%= answer %> </h3>
          </div>      
        <% } else { %>
          <div>
              <img src="/images/bubble.png" class="bubble"><h3 class="answer"><%= answer %> </h3>
          </div>
        <% } %>
       </div>
     </div>
     <img id="sherlock_img" src="/images/sherlock_pic.png">
   </div>

</div>

<!-- Script to move img_sherlock on button click -->
<script>
  document.getElementById('btn').addEventListener('click', function () {
  document.querySelector('#sherlock_img').classList.add('sherlock');
  });
</script>

</body>

<footer>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
</footer>

</html>